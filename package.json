{
  "name": "node-api",
  "version": "1.0.0",
  "description": "Backend API built using TypeScript, Express and MongoDB",
  "main": "app.js",
  "repository": "https://github.com/x249/node-api.git",
  "author": "x249",
  "license": "GPLv3",
  "private": true,
  "scripts": {
    "build": "tsc",
    "postinstall": "yarn run build",
    "dev": "tsc-watch --onSuccess \"node ./dist/app.js\"",
    "test": "jest --coverage --verbose",
    "prod": "yarn run build && yarn run start",
    "start": "cross-env NODE_ENV=production node ./dist/app.js",
    "start:cluster": "npx pm2 start pm2.yaml"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "compression": "^1.7.4",
    "consola": "^2.6.1",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "express-rate-limit": "^3.5.1",
    "helmet": "^3.18.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.7",
    "morgan": "^1.9.1",
    "node-emoji": "^1.10.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "serve-favicon": "^2.5.0",
    "swagger-ui-express": "^4.0.2",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^0.0.36",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/express-jwt": "^0.0.42",
    "@types/express-rate-limit": "^3.3.0",
    "@types/helmet": "^0.0.43",
    "@types/jest": "^24.0.12",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.5.0",
    "@types/morgan": "^1.7.35",
    "@types/node-emoji": "^1.8.1",
    "@types/request-promise": "^4.1.43",
    "@types/serve-favicon": "^2.2.30",
    "@types/supertest": "^2.0.7",
    "@types/swagger-ui-express": "^3.0.0",
    "cross-env": "^5.2.0",
    "jest": "^24.8.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "tsc-watch": "^2.1.2"
  }
}
